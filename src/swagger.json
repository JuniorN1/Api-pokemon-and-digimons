{
    "openapi": "3.0.0",
    "info": {
        "title": "Pokemon and Digimons Api",
        "description": "This api as container pokemons and digimons infors",
        "terms": "We dont have terms in moment",
        "contact": "example@email",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333/v1",
            "description": "url no test"
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "summary": "Login in systm",
                "description": "This route is response login in system",
                "tags": ["Authentication"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "operationId": "loginUser",
                "requestBody": {
                    "description": "This route is response login in system",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        },
                        "application/xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "This is login a user in system",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/register": {
            "post": {
                "summary": "Register new user in system",
                "description": "This route is response register new user in system",
                "tags": ["Authentication"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "operationId": "registerUser",
                "requestBody": {
                    "description": "This route is response register new user in system",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Register"
                            }
                        },
                        "application/xml": {
                            "schema": {
                                "$ref": "#/components/schemas/Register"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "This route is response register new user in system",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/pokemons": {
            "get": {
                "summary": "Get list pokemons",
                "description": "This route is response list pokemons",
                "tags": ["Pokemons"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit the number of results per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Offset the results to start from a specific position",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "This is a list pokemon",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Pokemons"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pokemon not found"
                    }
                }
            }
        },
        "/pokemon/{pokemon}": {
            "get": {
                "summary": "Get a specific pokemons",
                "description": "This endpoint is response to return specific search the pokemon name",
                "tags": ["Pokemons"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "parameters": [
                    {
                        "name": "pokemon",
                        "in": "path",
                        "description": "Search a pokemon to name",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "This is a pokemon",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Pokemons"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Pokemon not found"
                    }
                }
            }
        },
        "/digimons": {
            "get": {
                "summary": "show list digimons",
                "description": "This endpoint is response to return list digimons",
                "tags": ["Digimons"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Limit the number of results per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "offset",
                        "in": "query",
                        "description": "Offset the results to start from a specific position",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of Digimons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Digimons"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Digimon not found"
                    }
                }
            }
        },
        "/digimon/{digimon}": {
            "get": {
                "summary": "search digimon by name",
                "description": "This endpoint is response to return a especific digimon",
                "tags": ["Digimons"],
                "security": [{ "bearerAuth": [] }],
                "produces": ["application/xml", "application/json"],
                "parameters": [
                    {
                        "name": "digimon",
                        "in": "path",
                        "description": "Search a Digimon to name",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Search a Digimon",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Digimons"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Digimon not found"
                    }
                }
            }
        }
    },

