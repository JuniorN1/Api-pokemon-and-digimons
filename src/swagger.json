{
   "openapi":"3.0.0",
   "info":{
     "title":"Pokemon and Digimons Api",
     "description":"This api as container pokemons and digimons infors",
     "terms":"We dont have terms in moment",
     "contact":"example@email",
     "version":"1.0.0"
   },
   "servers":[
       {
           "url":"http://localhost:3333/v1",
           "description":"url no test"
       }
   ],
   "paths":{
       "/pokemons":{
           "get":{
               "summary":"Get list pokemons",
               "description":"This route is response list pokemons",
               "tags":["Pokemons"],
               "security":[{"bewarerAuth":[]}],
               "produces": [
                "application/xml",
                "application/json"
              ],          
               "responses":{
                   "200":{
                       "description":"This is a list pokemon",
                       "content":{ 
                           "application/json":{
                                "schema":{
                                    "type":"object",                                
                                    "$ref":"#/components/schemas/Pokemons"
                                                              
                                }
                            }
                        }
                   },
                   "404":{
                       "description":"Pokemon not found"
                   }
               }
           }
       },
       "/pokemon/{pokemon}":{
        "get":{
            "summary":"Get a specific pokemons",
            "description":"This endpoint is response to return specific search the pokemon name",
            "tags":["Pokemons"],
            "security":[{"bewarerAuth":[]}],
            "produces": [
             "application/xml",
             "application/json"
           ],    
           "parameters": [
            {
              "name": "pokemon",
              "in": "path",
              "description": "Search a pokemon to name",
              "required": true,
              "type": "string"
            }             
           ],      
            "responses":{
                "200":{
                    "description":"This is a pokemon",
                    "content":{ 
                        "application/json":{
                             "schema":{
                                 "type":"object",                                
                                 "$ref":"#/components/schemas/Pokemons"
                                                           
                             }
                         }
                     }
                },
                "404":{
                    "description":"Pokemon not found"
                }
            }
        }
    }
   },
   
   "components":{
       "schemas":{
           "Pokemons":{
               "type":"object",
               "properties":{
                    "id":{
                        "type":"number"
                    },
                   "name":{
                       "type":"string"
                   },
                   "image":{
                       "type":"string"
                   },
                   "description":{
                       "type":"string"
                   },
                   "season":{
                       "type":"string"
                   },
                   "type":{
                       "type":"string"
                   }                     
               }
           }
       },
       "securitySchemes":{
           "bearerAuth":{
               "type":"http",
               "scheme":"bearer",
               "bearerFormat":"JWT"
           }
       }
   }
}